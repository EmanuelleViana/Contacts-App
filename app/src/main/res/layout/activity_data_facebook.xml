<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.DataFacebookActivity">

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/fbImg"
        facebook:paddingEnd="@dimen/com_facebook_profilepictureview_preset_size_large"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/tvId"
        android:layout_centerHorizontal="true" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="68dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvId"
        android:text="null"
        android:layout_below="@+id/tvNome"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvNome"
        android:text="NoName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_above="@+id/login"
    android:layout_centerHorizontal="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gênero"
        android:id="@+id/textView6"
        android:layout_above="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />
    <View
        android:layout_width="222dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view2"
        android:layout_alignTop="@+id/tvGenre"
        android:layout_alignStart="@+id/view1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faça Login"
        android:id="@+id/tvEmail"
        android:padding="8dp"
        android:layout_above="@+id/textView6"
        android:layout_alignEnd="@+id/tvNome"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/textView4"
        android:layout_above="@+id/tvEmail"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />
    <View
        android:layout_width="222dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view1"
        android:layout_alignTop="@+id/tvEmail"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvGenre"
        android:padding="8dp"
        android:layout_marginBottom="60dp"
        android:text="Faça Login"
        android:layout_above="@+id/login"
        android:layout_alignStart="@+id/tvNome"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
</RelativeLayout>

